#!/bin/bash

function percentage() {
  echo $( \
    pmset -g ps \
    | grep -o '[0-9]*%' \
    | tr -d % \
    )
}

function charging() {
  pmset -g ps | grep -E "Battery Power|charged" >/dev/null 2>&1
  if [ $? -eq 0 ]; then
    return 1
  else
    return 0
  fi
}

function remain() {
  local time_remain
  time_remain=$( \
    pmset -g ps \
    | grep -o '[0-9]\+:[0-9]\+' \
    )
  if [ -z "$time_remain" ]; then
    time_remain="--:--"
  fi
  echo $time_remain
}

function icon() {
  echo ðŸ”‹
}

if [ "$OPTIND" = 1 ]; then
  while getopts :hprf: OPT
  do
    case $OPT in
      h)
        ;;
      p)
        DISPLAY=$DISPLAY percentage
        ;;
      r)
        DISPLAY=$DISPLAY remain
        ;;
      f)
        DISPLAY=$( \
          echo ${OPTARG} \
          | sed -e "s/%percentage/$(percentage)/g" \
          | sed -e "s/%remain/$(remain)/g" \
          | sed -e "s/%icon/$(icon)/g" \
          )
        ;;
      *)
        ;;
    esac
  done
fi

echo $DISPLAY
