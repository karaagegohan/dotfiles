#!/bin/bash
vol=$(osascript -e "(get volume settings)'s output volume")

if (( $vol == 0 )); then
  DISPLAY="#[fg=white]${vol}%"
elif (( $vol < 33 )); then
  DISPLAY="#[fg=blue]${vol}%"
elif (( $vol < 67  )); then
  DISPLAY="#[fg=green]${vol}%"
elif (( $vol < 100  )); then
  DISPLAY="#[fg=yellow]${vol}%"
else
  DISPLAY="#[fg=red]${vol}%"
fi

echo $DISPLAY
