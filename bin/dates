#!/bin/bash

function dates() {
  echo $(date '+%a %b %-d %H:%M')
}

function icon() {
  icons=🕛🕧🕐🕜🕑🕝🕒🕞🕓🕟🕔🕠🕕🕡🕖🕢🕗🕣🕘🕤🕙🕥🕚🕦
  hour=$(date '+%H')
  hour=$(echo `expr $hour % 12`)
  hour=$(echo `expr $hour \* 2`)
  hour=$(echo `expr $hour + 1`)
  min=$(date '+%M')
  min=$(echo `expr $min / 30`)
  idx=$(echo `expr $min + $hour`)
  echo $(echo $icons | cut -c $idx)
  # echo $hour
}

DISPLAY=''
if [ "$OPTIND" = 1 ]; then
  while getopts :hvf: OPT
  do
    case $OPT in
      h)
        ;;
      v)
        DISPLAY=$( \
          echo $DISPLAY ${date} \
          )
        ;;
      f)
        DISPLAY=$( \
          echo ${OPTARG} \
          | sed -e "s/%dates/$(dates)/g" \
          | sed -e "s/%icon/$(icon)/g" \
          )
        ;;
      *)
        ;;
    esac
  done
fi

echo $DISPLAY

