#!/bin/bash

function dates() {
  echo $(date '+%a %b %-d %H:%M')
}

function icon() {
  echo üïê
}

DISPLAY=''
if [ "$OPTIND" = 1 ]; then
  while getopts :hvf: OPT
  do
    case $OPT in
      h)
        ;;
      v)
        DISPLAY=$( \
          echo $DISPLAY ${date} \
          )
        ;;
      f)
        DISPLAY=$( \
          echo ${OPTARG} \
          | sed -e "s/%dates/$(dates)/g" \
          | sed -e "s/%icon/$(icon)/g" \
          )
        ;;
      *)
        ;;
    esac
  done
fi

echo $DISPLAY
