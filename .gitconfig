[core]
    editor = nvim
	quotepath = false
[user]
	name = ynoca
	email = usahillbanana@gmail.com
[push]
	default = simple
[color]
    ui = true
	diff = auto
	status = auto
	branch = auto
[alias]
    gr = log --pretty='medium-reverse' --graph --name-status
    sh = stash
    di = diff
    st = status
    ad = add
    cm = commit -m
    co = commit
    ps = push
    pl = pull
    ch = checkout
    cb = checkout -B
    br = branch
    db = branch -d
    me = merge
    fe = fetch
    rs = reset
    rb = rebase
    rm = rm --cached
    lo = log --reverse --decorate
    ma = checkout master
    ud = git reset --hard HEAD^

    today = "!f () {\
                 git log --oneline --reverse --branches \
                 --since=midnight --date=iso \
                 --author=\"$(git config user.name)\" \
                 --format=\" - %C(auto)%h%Creset : %s %C(green)(%ad)%Creset\";\
             };f"

[pretty]
	medium-reverse = format:%C(white reverse) %h %Creset %C(cyan reverse) %ar %Creset %C(green reverse) %an %Creset %C(white)ï½¡o( %s ) %Creset %C(red reverse)%d%Creset%n 
