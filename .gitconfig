[core]
  editor = nvim
  quotepath = false

[push]
  default = simple

[color]
  ui = true
  diff = auto
  status = auto
  branch = auto

[alias]
  ad = add
  ap = add -p
  ba = branch -a
  bd = branch -d
  bf = branch -f
  br = branch
  cb = checkout -B
  ch = checkout
  cm = commit -m
  cmad = "!f () { git commit -m \":tada:     add    $1\"; };f"
  cmch = "!f () { git commit -m \":recycle:  change $1\"; };f"
  cmrm = "!f () { git commit -m \":shower:   remove $1\"; };f"
  cmfx = "!f () { git commit -m \":bug:      fix    $1\"; };f"
  cmup = "!f () { git commit -m \":sparkles: update $1\"; };f"
  co = commit
  di = diff
  fe = fetch
  gr = log --pretty='medium-reverse' --graph --name-status
  lo = log --reverse --decorate
  ma = checkout master
  me = merge
  pl = pull
  pm = push origin master
  ps = push
  pf = push -f
  rb = rebase
  rm = rm --cached
  rs = reset
  sh = stash
  st = status
  ud = reset --hard HEAD^
  uu = !git add . && git commit -m "update" && git push

  td = "!f () {\
    git log --oneline --reverse --branches \
    --since=midnight --date=iso \
    --author=\"$(git config user.name)\" \
    --format=\" - %C(auto)%h%Creset : %s %C(green)(%ad)%Creset\";\
    };f"

[pretty]
  medium-reverse = format:%C(white reverse) %h %Creset %C(cyan reverse) %ar %Creset %C(green reverse) %an %Creset %C(white)ï½¡o( %s ) %Creset %C(red reverse)%d%Creset%n 

