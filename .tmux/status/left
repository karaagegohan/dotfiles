#!/bin/bash

display=''
colors=(55 62 69 88)
cnt=0

add-content()
{
  space="#[bg=colour${colors[$cnt]}] #[default]" 
  delimiter="#[fg=colour${colors[$cnt]},bg=colour${colors[$cnt+1]}]â®€#[default]" 
  icon="#[bg=colour${colors[$cnt]}]$1 #[default]" 
  message="#[bg=colour${colors[$cnt]}]$2#[default]" 
  content="$space$icon$space$message$space"
  display="$display$content$delimiter"
  cnt=$cnt+1
}

add-content "ğŸ—‘" "$(trash-info -s) / $(trash-info -n)" 
# add-content "ğŸ“‹" "$(osascript -e 'get the clipboard')" 
add-content "ğŸ“€" "$(disk-usage -f '%a [%c]')" 

display=$( \
  echo $display \
  | sed -e "s/,bg=colour${colors[$cnt]}//g" \
  )

echo $display

