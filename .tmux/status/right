#!/bin/bash

display=''
colors=(130 137 144 152 159)
cnt=0

add-content()
{
  space="#[bg=colour${colors[$cnt]}] #[default]" 
  delimiter="#[fg=colour${colors[$cnt]},bg=colour${colors[$cnt+1]}]â®‚#[default]" 
  icon="#[bg=colour${colors[$cnt]}]$1 #[default]" 
  message="#[bg=colour${colors[$cnt]}]$2#[default]" 
  content="$space$icon$space$message$space"
  display="$delimiter$content$display"
  cnt=$cnt+1
}

add-content "ğŸ•" "$(date '+%a %b %-d %H:%M:%S')"
add-content "ğŸ”‹" "$(battery -t -r)" 
add-content "ğŸ“¡" "$(wifi -t -f '%a in %i [%r]')"
add-content "ğŸ”Š" "$(volume -t)"

display=$( \
  echo $display \
  | sed -e "s/,bg=colour${colors[$cnt]}//g" \
  )

echo $display

