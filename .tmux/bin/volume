#!/bin/bash

function volume() {
  echo $(osascript -e "(get volume settings)'s output volume")
}

function icon() {
  echo $( \
    osascript -e "(get volume settings)'s output muted" \
    | sed -e "s/false/ðŸ”Š/g" \
    | sed -e "s/true/ðŸ”‡/g" \
    )
}

DISPLAY=''
if [ "$OPTIND" = 1 ]; then
  while getopts :hvf: OPT
  do
    case $OPT in
      h)
        ;;
      v)
        DISPLAY=$( \
          echo $DISPLAY ${vol} \
          )
        ;;
      f)
        DISPLAY=$( \
          echo ${OPTARG} \
          | sed -e "s/%volume/$(volume)/g" \
          | sed -e "s/%icon/$(icon)/g" \
          )
        ;;
      *)
        ;;
    esac
  done
fi

echo $DISPLAY
