#!/bin/bash

# output of df -g 
# Filesystem    1G-blocks Used Available Capacity  iused   ifree %iused  Mounted on
# /dev/disk1          232  208        23    90% 54703915 6277331   90%   /
DISK=$( \
  df -g \
  | grep 'disk1' \
  | awk '{print $3,$4,$5}' \
  )

function used() {
  echo $( \
    echo $DISK \
    | awk '{print $1}'\
    )
}

function available() {
  echo $( \
    echo $DISK \
    | awk '{print $2}'\
    )
}

function capacity() {
  echo $( \
    echo $DISK \
    | awk '{print $3}'\
    | grep -oE '[0-9]*'\
    )
}

function icon() {
  echo ðŸ“€
}

DISPLAY=""
if [ "$OPTIND" = 1 ]; then
  while getopts :uacf: OPT
  do
    case $OPT in
      a)
        DISPLAY=$DISPLAY ${available}
        ;;
      u)
        DISPLAY=$DISPLAY ${used}
        ;;
      c)
        DISPLAY=$DISPLAY ${capacity}
        ;;
      f)
        DISPLAY=$( \
          echo ${OPTARG} \
          | sed -e "s/%available/$(available)/g" \
          | sed -e "s/%used/$(used)/g" \
          | sed -e "s/%capacity/$(capacity)/g" \
          | sed -e "s/%icon/$(icon)/g" \
          )
        ;;
      *)
        usage
        ;;
    esac
  done
fi
echo $DISPLAY
