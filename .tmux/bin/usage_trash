#!/bin/bash

function usage() {
  local _script_name
  _cmd_name=$(basename $0)
cat <<_EOT_
Usage:
  $_cmd_name [-n] [-s] [-f format]

Description:
  # TODO

Options:
  -n
  -s
  -f
_EOT_
exit 1
}

function num() {
  echo $( \
    ls -U1 $HOME/.Trash \
    | wc -l \
    )
}

function size() {
  echo $( \
    du -h -c -m $HOME/.Trash \
    | echo `grep 'total'` \
    | awk '{print $1}' \
    | sed -e 's/[MBK]//g' \
    )
}

function icon() {
  echo ðŸ—‘
}

DISPLAY=''
if [ "$OPTIND" = 1 ]; then
  while getopts :hnsf: OPT
  do
    case $OPT in
      h)
        usage
        ;;
      n)
        DISPLAY="${DISPLAY} $(num_of_files)"
        ;;
      s)
        DISPLAY="${DISPLAY} $(garbage_size)"
        ;;
      f)
        DISPLAY=$( \
          echo ${OPTARG} \
          | sed -e "s/%num/$(num)/g" \
          | sed -e "s/%size/$(size)/g" \
          | sed -e "s/%icon/$(icon)/g" \
          )
        ;;
      *)
        ;;
    esac
  done
fi
shift `expr ${OPTIND} - 1`

echo $DISPLAY

